      }
    },
    "serverPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Valheim server password"
      }
    },
    "serverName": {
      "type": "string",
      "defaultValue": "Valheim Server",
      "metadata": {
        "description": "Valheim server name"
      }
    },
    "autoShutdownMinutes": {
      "type": "int",
      "defaultValue": 120,
      "metadata": {
        "description": "Auto-shutdown timeout in minutes"
      }
